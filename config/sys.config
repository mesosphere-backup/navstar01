[
  {'navstar', []},
  {kernel,
    [
      {start_pg2, true},
      {start_timer, true}
    ]
  },
  {lager, [
    {handlers, [
      {lager_console_backend, warning},
      {lager_file_backend, [{file, "error.log"}, {level, error}]}
    ]}
  ]
  },
  {lashup,
    [
      {work_dir, "/var/lib/dcos/navstar/lashup"}
    ]
  },
  {mnesia,
    [
      {dir, "/var/lib/dcos/navstar/mnesia"}
    ]
  },
  {navstar_rest,
    [
      {ip, {127, 0, 0, 1}},
      {port, 62080}
    ]
  },
  {mesos_state,
    [
      {ssl_token_file, "/run/dcos/etc/minuteman_auth.env"}
    ]
  },
  %% SASL config
  {sasl, [
         {sasl_error_logger, {file, "log/sasl-error.log"}},
         {errlog_type, error},
         {error_logger_mf_dir, "log/sasl"},      % Log directory
         {error_logger_mf_maxbytes, 10485760},   % 10 MB max file size
         {error_logger_mf_maxfiles, 5}           % 5 files max
        ]},
  {minuteman,
    [
      {master_uri, "http://leader.mesos:80/cache/master/state.json"},
      {enable_networking, true}
    ]
  },
  {telemetry,
    [
      {is_aggregator, false},
      {forward_metrics, true},
      {receive_metrics, false},
      {forwarder_destinations, ["master.mesos"]},
      {interval_seconds, 60},
      {splay_seconds, 20},
      {override_path, "/opt/mesosphere/etc/minuteman/overrides.json"}
    ]
  }
].
